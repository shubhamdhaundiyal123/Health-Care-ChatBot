from tkinter import *
# created a instance from TK class 
main_root = Tk()


#Attributes for label
    #text - adds the text
    #bg - background
    #fg - foreground
    #font - sets the font
    #    2 menthods
            #  font=("comicsansms",20,"bold")
            #  font="comicsansms 20 bold"
            
    #padx - x padding
    #pady -y padding
    #relief - border styling - SUNKEN, RAISED, GROOVE, RIDGE

#To use label, store it in variable
variable_for_label = Label(text="Info to show or mention using label", bg="white", fg="grey", padx=300, pady=300,font="comicsansms 20 bold",
                           borderwidth=5,relief=RIDGE
                           )

#To print variable
variable_for_label.pack()



main_root.mainloop()
